<mujoco model="world">
  <compiler angle="radian"/>
    <!-- Add some fluid viscosity to prevent the hanging box from jiggling forever -->
  <option viscosity="0.0" integrator="implicitfast"/>

  <statistic center="0 0 0.05" extent="5"/>

  <default>
    <default class="viz"><geom contype="0" conaffinity="0" group="2"/></default>
    <default class="col"><geom group="3" friction="1 0.005 0.0001" density="800"/></default>
  </default>


  <asset>
    <model name="gen3"  file="gen3_kortex_no_arm.xml"/>

    <texture type="skybox" builtin="gradient"
            rgb1="0.62 0.72 0.85" rgb2="0.05 0.08 0.12"
            width="512" height="512"/>

    <texture name="wood_tex" type="2d" file="../textures/wood_table_diff_4k.png"/>

    <material name="wood_table"
              texture="wood_tex"
              texrepeat="4 3"
              texuniform="true"
              specular="0.18" shininess="0.35" reflectance="0.02"
              rgba="1 1 1 1"/>

    <texture name="sparse_grass_tex" type="2d" file="../textures/sparse_grass_diff_4k.png"/>
    <material name="sparse_grass" texture="sparse_grass_tex" texuniform="true" texrepeat="0.25 0.25" reflectance="0.2"/>

    <texture name="rock_face_03_tex" type="2d" file="../textures/rock_face_03_diff_4k.png"/>
    <material name="rock_face_03" texture="rock_face_03_tex" texuniform="true" texrepeat="0.25 0.25" reflectance="0.2"/>

    <texture name="coast_sand_rocks_02_tex" type="2d" file="../textures/coast_sand_rocks_02_diff_8k.png"/>
    <material name="coast_sand_rocks_02" texture="coast_sand_rocks_02_tex" texuniform="true" texrepeat="0.4 0.4" reflectance="0"/>

    <texture name="mossy_cobblestone_diff_8k_tex" type="2d" file="../textures/mossy_cobblestone_diff_8k.png"/>
    <material name="mossy_cobblestone" texture="mossy_cobblestone_diff_8k_tex" texuniform="true" texrepeat="0.8 0.8" reflectance="0"/>

    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

  </asset>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="60" elevation="-20"/>
  </visual>

  <worldbody>

    <body name="bottle" pos="0.4 0.2 0.8">
      <geom class="viz" type="cylinder" size="0.035 0.05" rgba="0.85 0.95 1 1"/>
      <geom class="col" type="cylinder" size="0.035 0.05"/>
      <site name="bottle_grasp" pos="0 0 0" size="0.005" rgba="0.9 0.2 0.2 1"/>
    </body>

    <geom name="ground" size="0 0 0.05" type="plane" material="groundplane"/>

    <light name="key" pos="0 0 3" dir="-0.4 -0.2 -1"
        directional="true" castshadow="true"
        diffuse="0.85 0.85 0.85" specular="0.15 0.15 0.15"
        ambient="0.1 0.1 0.1"/>

    <body name="table" pos="0 0 0.725">
      <geom name="table_top" type="box" size="1.2 0.6 0.025" material="wood_table"/>
      <geom name="leg_fl" type="box" size="0.03 0.03 0.35" pos=" 1.1  0.5 -0.375" rgba="0.20 0.20 0.20 1"/>
      <geom name="leg_fr" type="box" size="0.03 0.03 0.35" pos=" 1.1 -0.5 -0.375" rgba="0.20 0.20 0.20 1"/>
      <geom name="leg_bl" type="box" size="0.03 0.03 0.35" pos="-1.1  0.5 -0.375" rgba="0.20 0.20 0.20 1"/>
      <geom name="leg_br" type="box" size="0.03 0.03 0.35" pos="-1.1 -0.5 -0.375" rgba="0.20 0.20 0.20 1"/>
    </body>

    <body name="robot_mount" pos="1 0 0.75">
      <attach model="gen3" body="base_link" prefix="gen3_"/>
    </body>
    
  </worldbody>

</mujoco>