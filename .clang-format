---
Language: Cpp

# Base style - Google is widely used in professional C++ projects
BasedOnStyle: Google
IndentWidth: 2
TabWidth: 2
UseTab: Never
ColumnLimit: 100

# Braces - Allman style for functions/classes (professional preference)
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: false
  AfterControlStatement: Never
  AfterEnum: false
  AfterFunction: true
  AfterNamespace: false
  AfterStruct: false
  AfterUnion: false
  BeforeCatch: false
  BeforeElse: false
  IndentBraces: false
  SplitEmptyFunction: true
  SplitEmptyRecord: true
  SplitEmptyNamespace: true

# Parameter formatting - each on new line with closing ) on own line
BinPackParameters: false
BinPackArguments: false
AlignAfterOpenBracket: BlockIndent
AllowAllParametersOfDeclarationOnNextLine: true
AllowAllArgumentsOnNextLine: false

# Keep short statements compact (professional preference)
AllowShortIfStatementsOnASingleLine: WithoutElse
AllowShortLoopsOnASingleLine: false
AllowShortBlocksOnASingleLine: Never
AllowShortFunctionsOnASingleLine: Empty
AllowShortLambdasOnASingleLine: All

# Pointers/references - left-aligned (most common in modern C++)
DerivePointerAlignment: false
PointerAlignment: Left
ReferenceAlignment: Left

# Indentation
ContinuationIndentWidth: 4
IndentWrappedFunctionNames: false

# Includes
SortIncludes: CaseSensitive
IncludeBlocks: Regroup

# Spacing
SpaceBeforeParens: ControlStatements
SpacesInParentheses: false
SpacesInSquareBrackets: false
SpaceAfterCStyleCast: false

# Professional defaults
AlignOperands: AlignAfterOperator
AlignConsecutiveAssignments: None
AlignConsecutiveDeclarations: None
AlignTrailingComments: true
ReflowComments: true
...
